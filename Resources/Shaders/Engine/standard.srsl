ShaderType Spatial;

PolygonMode Fill;
CullMode Back;
DepthCompare LessOrEqual;
PrimitiveTopology TriangleList;
BlendEnabled false;
DepthWrite true;
DepthTest true;

uniform vec3 color;
uniform sampler2D diffuse;

vec4 GetTextureColor() {
    return texture(diffuse, UV);
}

void fragment() {
    COLOR = vec4(color, 1.f) * GetTextureColor();
}

void vertex() {
    VERTEX.x = -VERTEX.x * TIME;
    VERTEX *= GetTextureColor().rgb;
}