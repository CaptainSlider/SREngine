ShaderType PostProcessing;

PolygonMode Fill;
CullMode Front;
DepthCompare LessOrEqual;
PrimitiveTopology TriangleList;
BlendEnabled false;
DepthWrite false;
DepthTest false;

void fragment() {
    COLOR_INDEX_0 = vec4(UV, 1, 1);
}

void vertex() {
    UV = vec2((gl_VertexIndex << 1) & 2, gl_VertexIndex & 2);
    VERTEX = vec3(UV * 2.0 - 1.0, 0.0);
}