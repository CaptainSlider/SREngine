<module name="diffuse" type="fragment">
    <layouts>
        <diffuseMap type="sampler2D" location="0" IO="uniform"/>
        <TexCoord type="vec2" location="0" IO="input"/>
    </layouts>
    <segments priority="0">
        <output>
            <vec4 name="color"/>
        </output>
        <segment code="vec4 color = texture(diffuseMap, TexCoord);"/>
    </segments>
</module>
