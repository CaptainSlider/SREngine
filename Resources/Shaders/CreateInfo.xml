<?xml version="1.0"?>
<Shaders>
    <!-- можно использовать один и тот же шейдер, но давать ему разное имя -->

    <!-- Engine -->
    <Shader path="engine/geometry" name="geometry">
        <Vertex value="Mesh3DVertex"/>
        <Uniforms>
            <!-- binding 0 - mesh   (model mat) -->
            <Uniform binding="0" type="Common" UBO="Mesh3dUBO" />
            <!-- binding 5 - shader (view & proj mat) -->
            <Uniform binding="5" type="Shared" UBO="ProjViewUBO" />
        </Uniforms>
        <Info>
            <PolygonMode value="Fill"/>
            <CullMode value="Back"/>
            <DepthCompare value="LessOrEqual"/>
            <BlendEnabled value="true"/>
            <DepthWrite value="true"/>
            <DepthTest value="true"/>
        </Info>
        <!--     descriptor write
        [descriptor]  [bind]      [data]
        0               0       model uniform
        0               1       diffuse
        0               2       normal
        0               3       specular
        0               4       glossiness
        1               5       view & proj uniform -->
    </Shader>
    <Shader path="engine/transparent" name="transparent">
        <Vertex inherit="geometry"/>
        <Uniforms inherit="geometry"/>
        <Info>
            <PolygonMode value="Fill"/>
            <CullMode value="Back"/>
            <DepthCompare value="LessOrEqual"/>
            <BlendEnabled value="true"/>
            <DepthWrite value="false"/>
            <DepthTest value="true"/>
        </Info>
    </Shader>
    <Shader path="engine/skybox" name="skybox">
        <Vertex value="SkyboxVertex"/>
        <Uniforms>
            <!-- binding 0 - proj & view -->
            <Uniform binding="0" type="Shared" UBO="ProjViewUBO" />
        </Uniforms>
        <Info inherit="geometry"/>
    </Shader>

    <!-- Editor -->
    <Shader path="editor/debugWireframe" name="debugWireframe">
        <Vertex inherit="skybox"/>
        <Uniforms>
            <Uniform binding="0" type="Common" UBO="WireframeUBO" />
            <Uniform binding="1" type="Shared" UBO="ProjViewUBO" />
        </Uniforms>
        <Info>
            <PolygonMode value="Line"/>
            <CullMode value="Back"/>
            <DepthCompare value="LessOrEqual"/>
            <BlendEnabled value="true"/>
            <DepthWrite value="true"/>
            <DepthTest value="true"/>
        </Info>
    </Shader>

    <!-- Game -->
</Shaders>
