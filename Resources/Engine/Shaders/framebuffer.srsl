ShaderType PostProcessing;

PolygonMode Fill;
CullMode Front;
DepthCompare LessOrEqual;
PrimitiveTopology TriangleList;
BlendEnabled false;
DepthWrite false;
DepthTest false;

void fragment() {
    COLOR_INDEX_0 = texture(COLOR_ATTACHMENT_0, UV);
}

void vertex() {
    UV = vec2((VERTEX_INDEX << 1) & 2, VERTEX_INDEX & 2);
    VERTEX = vec3(UV * 2.0 - 1.0, 0.0);
}